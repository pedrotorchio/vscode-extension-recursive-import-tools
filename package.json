{
  "name": "@pedrotorchio/recursive-import-tools",
  "displayName": "Recursive import tools",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "imports_tree",
        "contents": "No file selected. Please select a file to see its imports."
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "imports_tree",
          "name": "Imports tree",
          "icon": "$(file-directory)"
        }
      ]
    },
    "commands": [
      {
        "command": "recursive-import-tools.update-tree",
        "title": "Import tree: Update with currently visible files"
      },
      {
        "command": "recursive-import-tools.edit-item-label",
        "title": "Edit item label",
        "icon": "$(edit)"
      },
      {
        "command": "recursive-import-tools.toggle-visibility",
        "title": "Toggle hidden items",
        "icon": "$(eye)"
      },
      {
        "command": "recursive-import-tools.hide-import",
        "title": "Hide dependency",
        "icon": "$(eye-closed)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "recursive-import-tools.edit-item-label",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "recursive-import-tools.edit-item-label",
          "when": "view == imports_tree && viewItem != 'variable'",
          "group": "inline"
        },
        {
          "command": "recursive-import-tools.hide-import",
          "when": "view == imports_tree && viewItem != 'variable'",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "recursive-import-tools.toggle-visibility",
          "when": "view == imports_tree",
          "group": "navigation"
        }
      ]
    },
    "activationEvents": [
      "onView:imports_tree"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/find-package-json": "^1.2.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "find-package-json": "^1.2.0",
    "resolve": "^1.22.10",
    "typescript-parser": "^2.6.1"
  }
}